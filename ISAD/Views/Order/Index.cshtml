@model ISAD.Models.Products

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Menu</h1>
            <select class="custom-select" size="10" asp-for="Id"
                    asp-items="(IEnumerable<SelectListItem>)ViewBag.Products">
            </select>
        </div>
        <div class="col-6">
            <h1>Your Order</h1>
            <select class="custom-select" multiple>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <select class="custom-select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
        </div>
        <div class="col-3">
            <a class="btn btn-outline-white" asp-controller="Order" asp-action="Index" role="button">Add to order</a>
        </div>
    </div>
</div>